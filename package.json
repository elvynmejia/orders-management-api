{
  "author": "Elvyn M",
  "license": "ISC",
  "name": "order-management",
  "version": "1.0.0",
  "description": "Orders management api",
  "main": "index.js",
  "scripts": {
    "build": "tsc",
    "start": "tsc && node compiled/server.js",
    "test": "mocha -r ts-node/register spec/**/*.spec.ts --reporter spec --require spec/index.ts --file spec/mochaHooks.ts --exit",
    "noto": "mocha -r ts-node/register spec/**/*.spec.ts --reporter spec --require spec/index.ts --file spec/mochaHooks.ts --no-timeout --exit",
    "lint": "eslint app/**/*.ts spec/**/*.spec.ts",
    "lint-fix": "eslint app/**/*.ts spec/**/*.spec.ts --fix",
    "migrate:up": "tsc && npx typeorm migration:run -d compiled/app/db.js",
    "migrate:down": "tsc && npx typeorm migration:revert -d compiled/app/db.js"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "morgan": "^1.10.0",
    "mysql2": "^3.5.2",
    "reflect-metadata": "^0.1.13",
    "typeorm": "^0.3.17",
    "typescript": "^5.1.6"
  },
  "devDependencies": {
    "@types/chai": "^4.3.4",
    "@types/chai-as-promised": "^7.1.5",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/mocha": "^10.0.1",
    "@types/morgan": "^1.9.4",
    "@types/uuid": "^9.0.1",
    "@typescript-eslint/eslint-plugin": "^6.1.0",
    "@typescript-eslint/parser": "^6.1.0",
    "chai": "^4.3.7",
    "chai-as-promised": "^7.1.1",
    "chai-http": "^4.3.0",
    "eslint": "^8.45.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-react": "^7.32.2",
    "mocha": "^10.2.0",
    "ts-node": "^10.9.1"
  }
}
